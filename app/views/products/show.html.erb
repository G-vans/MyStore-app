<p class="notice" style="color: green;"><%= notice %></p>

<div class="product-details">
  <%= render @product %>
</div>

<div class="actions">
  <%= link_to "Edit this product", edit_product_path(@product), class: "btn btn-outline-secondary" %> |
  <%= link_to "Back to products", products_path, class: "btn btn-outline-secondary" %>
|
  <%= link_to "Destroy this product", @product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %>
</div>
