      <div class="card">
        <%= link_to product_path(product) do %>
          <%= image_tag product.image_url, class: "card-img-top fixed-size" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <p class="card-text"><%= product.description %></p>
          <div class="d-flex justify-content-between">
            <p class="card-text" style="font-weight: 400;"><%= number_to_currency(product.price) %></p>
            <%= link_to cart_path(id: product.id), method: :get do %>
              <i class="fas fa-shopping-cart"></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
